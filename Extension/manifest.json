{
    "manifest_version":3,
    "name":"prueba-extension",              
    "description":"Esta es una prueba",     
    "version":"1.0",                       
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "/icons/cookie.png"
          }
    },
    "icons": {
        "16": "/icons/cookie.png",
        "32": "/icons/cookie.png",
        "48": "/icons/cookie.png",
        "128": "/icons/cookie.png"
    },
    "content_scripts": [
        {
          "matches": ["https://elpais.com/"],
          "js": ["/scripts/content-script.js"]
        }
      ]
}